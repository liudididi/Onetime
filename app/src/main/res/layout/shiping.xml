<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1620px"
    >
    <RelativeLayout
        android:id="@+id/rela_remen"
        android:paddingLeft="130px"
        android:paddingRight="130px"
        android:weightSum="1"
        android:layout_width="540px"
        android:layout_height="100px">
        <TextView
            android:id="@+id/tv_remen"
            android:textColor="#03A9F4"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:text="热门"
            android:textSize="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:id="@+id/v_remen"
            android:background="#03A9F4"
            android:layout_width="match_parent"
            android:layout_height="10px"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_toRightOf="@id/rela_remen"
        android:id="@+id/rela_fujin"
        android:paddingLeft="130px"
        android:paddingRight="130px"
        android:weightSum="1"
        android:layout_width="540px"
        android:layout_height="100px">
        <TextView
            android:id="@+id/tv_fujin"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:text="附近"
            android:textSize="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:id="@+id/v_fujin"
            android:background="#03A9F4"
            android:layout_width="match_parent"
            android:layout_height="10px"></View>
    </RelativeLayout>
    <utils.AnimationLoading
        android:layout_below="@+id/rela_remen"
        android:id="@+id/ani"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </utils.AnimationLoading>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:visibility="gone"
        android:layout_below="@+id/rela_remen"
        android:id="@+id/sp_remen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>




</RelativeLayout>

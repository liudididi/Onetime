<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liu.asus.yikezhong.FaduanziActivity">
<RelativeLayout
    android:id="@+id/rezheng"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tou"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="#03A9F4">
        <TextView
            android:id="@+id/tv_duanzi_quxiao"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10px"
            android:src="@mipmap/ic_launcher_round"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="发表文章"
            android:textColor="#fff"
            android:textSize="50px" />

        <TextView
            android:id="@+id/tv_fabiao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:gravity="center"
            android:padding="10px"
            android:text="发表"
            android:textColor="#fff"
            android:textSize="50px" />
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:textSize="15sp"
        android:maxLines="5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tou"
        android:background="@null"
        android:gravity="top"
        android:padding="20px"
        android:hint="请输入内容,禁止输入色情,暴力等违法国家法律的内容,违者将以封号处理!"
        android:id="@+id/ed_fabiao" />

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ed_fabiao"
        android:src="@drawable/add"
        android:layout_marginLeft="50px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_add"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
</LinearLayout>

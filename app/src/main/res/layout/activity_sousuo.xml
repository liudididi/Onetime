<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liu.asus.yikezhong.SousuoActivity">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ss_title"
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/ss_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@drawable/fh"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="40px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="400px"
            android:layout_marginTop="30px"
            android:text="搜索好友"
            android:textColor="#fff"
            android:textSize="40px" />
    </RelativeLayout>
    <scut.carson_ho.searchview.SearchView
        android:layout_below="@+id/ss_title"
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textSizeSearch="5dp"
        app:textColorSearch="#3F51B5"
        app:textHintSearch="搜索好友"
        app:searchBlockHeight="150"
        app:searchBlockColor="#ffffff"
        />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ss_linear"
        android:orientation="horizontal"
        android:background="#EBEBEB"
        android:layout_below="@+id/ss_title"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <ImageView
            android:layout_marginTop="15px"
            android:layout_marginLeft="10px"
            android:padding="10px"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/sousuo"
            />
        <EditText
            android:id="@+id/ed_sousuo"
            android:layout_width="860px"
            android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_sousuo"
          android:text="搜索"
          android:gravity="center"
          android:layout_width="100px"
          android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/search_view"
        android:id="@+id/ss_xlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_marginTop="800px"
        android:id="@+id/tv_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="搜好友~"
        android:textSize="30sp"
        android:textStyle="bold" />



</RelativeLayout>

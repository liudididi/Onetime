<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="480px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/drawerlayout" />

        <com.meg7.widget.CircleImageView
            app:roundAsCircle="true"
            android:id="@+id/ce_icon"
            android:layout_width="180px"
            android:layout_height="160px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="210px"
            android:src="@drawable/raw_1499936862" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_alignLeft="@+id/ce_icon"
            android:layout_alignStart="@+id/ce_icon"
            android:layout_below="@+id/ce_icon"
            android:gravity="center"
            android:text="编辑个性签名"
            android:textColor="#fff"
            android:id="@+id/textView3" />

        <ImageView
            android:layout_marginTop="13px"
            android:id="@+id/img_xiugai"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="20px"
            android:layout_marginStart="24px"
            android:layout_toEndOf="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_name"
            android:src="@drawable/xiugai" />

        <TextView
            android:layout_marginTop="260px"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:layout_toEndOf="@+id/ce_icon"
            android:layout_toRightOf="@+id/ce_icon"
            android:text="椰果奶茶"
            android:textColor="#fff"
            android:textSize="60px" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/sex" />


        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout4"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:layout_marginTop="60px">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60px"
                android:layout_height="90px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499933216" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:layout_marginStart="60px"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:gravity="center"
                android:text="我的关注" />

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499943790" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayout5"
            android:layout_alignStart="@+id/relativeLayout5"
            android:layout_below="@+id/relativeLayout5"
            android:layout_marginRight="90px">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60px"
                android:layout_height="90px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499947358" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:layout_marginStart="60px"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:gravity="center"
                android:text="我的收藏" />

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499943790" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayout6"
            android:layout_alignStart="@+id/relativeLayout6"
            android:layout_below="@+id/relativeLayout6"
            android:layout_marginRight="90px">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60px"
                android:layout_height="90px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499946865" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:layout_marginStart="60px"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:gravity="center"
                android:text="搜索好友" />

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499943790" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout7"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60px"
                android:layout_height="90px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499947389" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:layout_marginStart="60px"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:gravity="center"
                android:text="消息通知" />

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499943790" />
        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout10"
            android:layout_alignLeft="@+id/relativeLayout8"
            android:layout_alignStart="@+id/relativeLayout8"
            android:layout_marginRight="90px">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="60px"
                android:layout_height="90px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1500886654" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:layout_marginStart="60px"
                android:layout_toEndOf="@+id/imageView7"
                android:layout_toRightOf="@+id/imageView7"
                android:gravity="center"
                android:text="夜间模式" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/relativeLayout10"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@drawable/raw_1499947056" />

                <TextView
                    android:layout_marginTop="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的作品" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/left_shezhi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:src="@drawable/raw_1499947157" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>

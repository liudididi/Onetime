<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liu.asus.yikezhong.IGuanzhuActivity">

    <RelativeLayout
        android:id="@+id/igz_title"
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/gz_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@drawable/fh"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="40px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="400px"
            android:layout_marginTop="30px"
            android:text="我的关注"
            android:textColor="#fff"
            android:textSize="40px" />

        <TextView
            android:gravity="center"
            android:textSize="40px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="热门关注"
            android:padding="10px"
            android:src="@mipmap/ic_launcher_round" />
    </RelativeLayout>
    <View
        android:layout_below="@+id/igz_title"
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:id="@+id/iv_xia"
        android:background="#EBEBEB"
        ></View>

<com.jcodecraeer.xrecyclerview.XRecyclerView
    android:layout_below="@+id/iv_xia"
    android:id="@+id/xlv_gaunzhu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>

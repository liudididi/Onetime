<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/raw_1500974387"
    tools:context="com.liu.asus.yikezhong.OtherloginActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_fh1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:padding="5px"
            android:src="@drawable/raw_1500885944" />

        <TextView
            android:id="@+id/te_register"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="注册账号"
            android:textColor="@color/colorziti" />
    </RelativeLayout>

    <ImageView
        android:layout_width="240px"
        android:layout_height="240px"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75px"
        android:src="@drawable/raw_1500977101" />


    <LinearLayout
        android:id="@+id/rl_background"
        android:layout_width="780px"
        android:layout_height="300px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="60px"
        android:background="@drawable/but_login"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36px"
                android:text="账号:"
                android:textColor="#B5B3A1" />

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:background="@null"
                android:textSize="42px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            android:background="#C4C4C4"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36px"
                android:text="密码"
                android:textColor="#B5B3A1" />

            <EditText
                android:id="@+id/et_psd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textSize="42px" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/but_log"
        android:layout_width="780px"
        android:layout_height="135px"
        android:layout_alignLeft="@+id/rl_background"
        android:layout_alignStart="@+id/rl_background"
        android:layout_below="@+id/rl_background"
        android:layout_marginTop="90px"
        android:background="@drawable/but_logo"
        android:text="登录"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="135px"
        android:layout_alignEnd="@+id/but_log"
        android:layout_alignRight="@+id/but_log"
        android:layout_below="@+id/but_log"
        android:layout_marginEnd="33px"
        android:layout_marginRight="33px"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="#B5B3A1" />

    <TextView
        android:id="@+id/tv_ykdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72px"
        android:text="游客登录"
        android:textColor="#B5B3A1" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2defa"
    tools:context="com.liu.asus.yikezhong.FashipingActivity">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_result"
        android:layout_width="match_parent"
        android:layout_height="1000px"
        android:scaleType="centerCrop"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_marginTop="30px"
            android:id="@+id/tv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@drawable/fh"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#fff"
            android:textSize="50px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:padding="10px"
            android:src="@drawable/xiangji" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_luzhi"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:src="@drawable/pzan" />
</RelativeLayout>

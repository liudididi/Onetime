<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="680px"
        >
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:scaleType="centerCrop"
            android:src="@drawable/a" />

        <RelativeLayout
            android:id="@+id/relativeLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:padding="10px"
                android:paddingLeft="30px"
                android:src="@drawable/fh" />

            <TextView
                android:id="@+id/tv_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="木子"
                android:textColor="#fff" />


            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/imageView9"
                android:layout_toStartOf="@+id/imageView9"
                android:padding="15px"
                android:src="@drawable/fenxiang" />


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30px"
                android:padding="15px"
                android:src="@drawable/xiaoxi" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout12"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView8">

            <TextView
                android:id="@+id/tv_userinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="240px"
                android:text="154825  粉丝  |   17 关注"
                android:textColor="#C4C4C4" />

            <TextView
                android:id="@+id/tv_guanzhu"
                android:layout_width="500px"
                android:layout_height="60px"
                android:layout_alignLeft="@+id/tv_userinfo"
                android:layout_alignStart="@+id/tv_userinfo"
                android:layout_below="@+id/tv_userinfo"
                android:layout_marginTop="20px"
                android:background="@drawable/user_bg"
                android:gravity="center"
                android:text="+关注"
                android:textColor="#03A9F4"
                />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/dianzan_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:src="@drawable/dianzan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_zuopin_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="120px"
                android:text="作品(3)"
                android:textColor="#03A9F4"
                android:textSize="40px" />

            <View
                android:layout_width="160px"
                android:layout_height="5px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="110px"
                android:background="#03A9F4"></View>
        </RelativeLayout>


        <com.meg7.widget.CircleImageView
            android:id="@+id/ro_user"
            android:layout_width="160px"
            android:layout_height="150px"

            app:roundAsCircle="true"
            android:layout_alignBottom="@+id/relativeLayout12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="150px"
            android:layout_marginLeft="40px"
            android:src="@drawable/raw_1499936862" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout12"
            android:background="#C4C4C4"></View>
    </RelativeLayout>

